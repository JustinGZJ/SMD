<UserControl x:Class="DAQ.Pages.materialdialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DAQ.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel
                Margin="16">
            <WrapPanel Width="800">
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                             Shift
                    </TextBlock>
                    <TextBox Text="{Binding Shift}"
                        Margin="0 8 0 0"
                        HorizontalAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Margin="10" Width="160">
                    <TextBlock>
                            Shift Name
                    </TextBlock>
                    <TextBox Text="{Binding ShiftName}"
                            Margin="0 8 0 0"
                            HorizontalAlignment="Stretch"
                             />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                           Tube Lot Number
                    </TextBlock>
                    <TextBox Text="{Binding TubeLotNo}"
                            Margin="0 8 0 0"
                            HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                           Line Number
                    </TextBlock>
                    <TextBox Text="{Binding LineNo}"
                            Margin="0 8 0 0"
                            HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Bobbin Lot Number
                    </TextBlock>
                    <TextBox Text="{Binding BobbinLotNo}"
                            Margin="0 8 0 0"
                            HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Machine Number
                    </TextBlock>
                    <TextBox Text="{Binding MachineNo}"
                            Margin="0 8 0 0"
                            HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Employee Number
                    </TextBlock>
                    <TextBox Text="{Binding EmployeeNo}"
                            Margin="0 8 0 0"
                            HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Fly Wire Lot No
                    </TextBlock>
                    <TextBox Text="{Binding FlyWireLotNo}"
                            Margin="0 8 0 0"
                            HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Tube Lot No
                    </TextBlock>
                    <TextBox Text="{Binding TubeLotNo}"
                            Margin="0 8 0 0"
                            HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Bobbin Cavity No
                    </TextBlock>
                    <TextBox Text="{Binding BobbinCavityNo}"
                                 Margin="0 8 0 0"
                                 HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Bobbin Part Name
                    </TextBlock>
                    <TextBox Text="{Binding BobbinPartName}"
                                 Margin="0 8 0 0"
                                 HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Bobbin Tool No
                    </TextBlock>
                    <TextBox Text="{Binding BobbinToolNo}"
                                 Margin="0 8 0 0"
                                 HorizontalAlignment="Stretch"
                        />
                </StackPanel>

                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Production Order
                    </TextBlock>
                    <TextBox Text="{Binding ProductionOrder}"
                                 Margin="0 8 0 0"
                                 HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Laser Location 1
                    </TextBlock>
                    <TextBox Text="{Binding LaserLoc1}"
                                 Margin="0 8 0 0"
                                 HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Laser Location 2
                    </TextBlock>
                    <TextBox Text="{Binding LaserLoc2}"
                                 Margin="0 8 0 0"
                                 HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="160" Margin="10">
                    <TextBlock>
                            Laser Location 3
                    </TextBlock>
                    <TextBox Text="{Binding LaserLoc3}"
                                 Margin="0 8 0 0"
                                 HorizontalAlignment="Stretch"
                        />
                </StackPanel>
                <StackPanel Width="260" Margin="10">
                    <TextBlock>
                             Server Path
                    </TextBlock>
                    <TextBox Text="{Binding SaveRootPath}"
                                 Margin="0 8 0 0"
                                 HorizontalAlignment="Stretch"
                        />
                </StackPanel>
            </WrapPanel>
            <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button
                        Style="{StaticResource MaterialDesignFlatButton}"
                        IsDefault="True"
                        Margin="0 8 8 0"
                        Command="materialDesign:DialogHost.CloseDialogCommand">
                    <Button.CommandParameter>
                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                            True
                        </system:Boolean>
                    </Button.CommandParameter>
                    ACCEPT
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
