                        VerticalAlignment="Center"
                        Margin="16">
                            <md:PackIcon Kind="StepBackward" />
                        </Button>
                        <Button Style="{DynamicResource MaterialDesignFloatingActionAccentButton}"                     
                        Command="{x:Static md:Transitioner.MoveNextCommand}"                    
                        Margin="16">
                            <md:PackIcon Kind="StepForward" />
                        </Button>
                    </StackPanel>
                </Grid>
            </md:TransitionerSlide>
            <md:TransitionerSlide  OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                <Grid>
                    <ContentControl s:View.Model="{Binding N5}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Button Style="{DynamicResource MaterialDesignFloatingActionMiniButton}" 
                        Command="{x:Static md:Transitioner.MovePreviousCommand}"
                        VerticalAlignment="Center"
                        Margin="16">
                            <md:PackIcon Kind="StepBackward" />
                        </Button>
                        <Button Style="{DynamicResource MaterialDesignFloatingActionAccentButton}"                     
