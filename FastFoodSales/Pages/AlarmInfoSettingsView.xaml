<UserControl x:Class="DAQ.Pages.AlarmInfoSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DAQ.Pages"
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:AlarmInfoSettingsViewModel}">
    <DockPanel>
        <StackPanel Margin="5" DockPanel.Dock="Top"  Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">STATION ID</TextBlock>
            <ComboBox x:Name="Box" SelectionChanged="{s:Action Filter}"  ItemsSource="{Binding stationIds}" Width="60" Margin="20 0"></ComboBox>
            <Button Command="{s:Action LoadFromFile}" CommandParameter="{Binding ElementName=Box,Path=SelectedValue}">导入</Button>
        </StackPanel>
            <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding  StationId}"
                        Header="站位" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding  AlarmIndex}"
                        Header="报警编号" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding  AlarmContent}"
                        Header="报警内容" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
